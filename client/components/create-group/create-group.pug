ul.nav()
  li(ui-sref-active='active')
    a(ui-sref='login')
      a.btn(ng-click='$ctrl.isCreateGrp = !$ctrl.isCreateGrp' ng-if='!$ctrl.isCreateGrp')
        i.fa.fa-users
        span Create Group
      .input-group(ng-if='$ctrl.isCreateGrp')
        input.form-control(
          ng-model='$ctrl.groupName'
          placeholder='Group Name'
        )
        .input-group-addon(ng-click='$ctrl.createGroup($ctrl.groupName)' )
          i.fa.fa-plus
          span

  li
    a(ng-repeat='group in $ctrl.groups' ui-sref='contact-list')
      span(ng-bind='group.name')

